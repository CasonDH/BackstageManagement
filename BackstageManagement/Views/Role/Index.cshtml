<div class="layui-card">
    <div class="layui-card-header">
        角色管理
    </div>
    <div class="layui-card-body">
        <div class="layui-row" style="text-align:left">
            <button class="layui-btn" id="btnAdd">
                <i class="layui-icon layui-icon-add-circle"></i>
                添加
            </button>
            <button class="layui-btn" id="btnRefresh">
                <i class="layui-icon layui-icon-refresh"></i>
                刷新
            </button>
            <table class="layui-hide" id="roletable" lay-filter="roletable"></table>
        </div>
    </div>

</div>
@section head{
    <script type="text/html" id="operationTpl">
        <div>
            <a class="layui-btn layui-btn-xs" lay-event="edit">
                <i class="layui-icon layui-icon-edit"></i>编辑
            </a>
            <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="delete">
                <i class="layui-icon layui-icon-delete"></i>删除
            </a>
        </div>
    </script>
    <script type="text/html" id="isEnabledTpl">
        <input disabled type="checkbox" value="{{d.IsEnabled}}" lay-skin="switch" lay-text="是|否" {{d.IsEnabled?'checked':''}} />
    </script>
    <script type="text/html" id="roleInfo">
        <div style="margin:20px 0 0 0">
            <form class="layui-form">
                <div class="layui-form-item">
                    <div class="layui-inline">
                        <div class="layui-form-label">角色名</div>
                        <div class="layui-input-inline">
                            <input type="text" id="roleName" required lay-verify="required" placeholder="角色名" class="layui-input" />
                        </div>
                    </div>
                    <div class="layui-inline">
                        <div class="layui-form-label">激活</div>
                        <div class="layui-input-inline">
                            <input type="checkbox" id="isEnabled" checked  lay-skin="switch" lay-text="是|否" lay-filter="isEnabled" class="layui-input" />
                        </div>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-form-label">描述</div>
                    <div class="layui-input-block">
                        <textarea class="layui-textarea" placeholder="备注" style="width:515px"></textarea>
                    </div>
                </div>
            </form>
        </div>
    </script>
    <script type="text/javascript" src="../Scripts/role.js"></script>
}